<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:background="@drawable/card_ui"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="36.0dip"
  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView android:id="@id/dialog_icon"
        android:padding="20.0dip"
        android:layout_width="fill_parent"
        android:layout_height="80.0dip"
        android:src="@drawable/ic_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Location Permissions Disclosure"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_icon" />

    <TextView android:textSize="14.0sp"
        android:textColor="@color/black"
        android:id="@+id/msg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12.0dip"
        android:layout_marginTop="24.0dip"
        android:layout_marginRight="12.0dip"
        android:text="Inland Pilot App collects background location data to enable Tracking Vehicle, To Know Destination Remaining Distance and to know Arrival date and time of destination even when the app is closed or not in use.\n\n\n If you are agree then Please click on Accept and Allow Location permission."
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_icon" />
    <TextView android:textColor="#ff2196f3"
        android:id="@+id/Privacy_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12.0dip"
        android:layout_marginTop="6.0dip"
        android:layout_marginRight="12.0dip"
        android:text="Privacy Policy"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/msg" />
    <LinearLayout android:layout_gravity="bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dip"
        android:layout_marginTop="20.0dip"
        android:layout_marginRight="8.0dip"
        android:layout_marginBottom="6.0dip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Privacy_link">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/declineDisclosure"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="decline"
            android:layout_weight="1.0"
            android:layout_marginEnd="4.0dip"
            app:backgroundTint="@color/login_textbox_color" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/acceptDisclosure"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Accept"
            android:layout_weight="1.0"
            android:layout_marginStart="4.0dip"
            app:backgroundTint="@color/login_textbox_color" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>